{% extends layout_template  %}

{% block title %}{{ interface('emailconfirm') }}{% endblock %}

{% block content %}

    <h1>{{ interface('accnotactive') }}</h1>

    <p>{{ interface('emailsent_1') }} <strong>{{ email }}</strong> {{ interface('emailsent_1') }}</p>

    <p>{{ interface('clicklinktoconfirm') }}</p>

    <div style="margin: 20px 0px;">
        <form method="POST" action="{{ resendUrl }}">
            <input type="hidden" name="email" value="{{ email }}">
            <button type="submit" class="btn btn-default">{{ interface('resendmsg') }}</button>
        </form>
    </div>

    <p>{{ interface('resetwarning') }} <strong>{{ fromAddress }}</strong>.</p>

{% endblock %}
