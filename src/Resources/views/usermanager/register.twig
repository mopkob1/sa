{% extends layout_template  %}

{% block title %}{{ interface('register') }}{% endblock %}

{% block content %}

    {% if app.user %}
        <p>{{ interface('hello') }}, {{ app.user.displayName }}. {{ interface('alradylogin') }}</p>
        <p><a href="{{ path('user.logout') }}">{{ interface('logout') }}</a></p>

    {% else %}
        <h1>
            {{ interface('createuser') }}
        </h1>

        <p class="text-muted lead">
            {{ interface('haveacc') }} <a href="{{ path('user.login') }}">{{ interface('login') }}.</a>
        </p>

        {% if error %}
            <div class="alert alert-danger">{{ error|nl2br }}</div>
        {% endif %}

        <form class="form-horizontal" method="POST">

            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-name">{{ interface('name') }}</label>
                <div class="col-sm-8">
                    <input class="form-control" name="name" type="text" id="input-name" placeholder="{{ interface('name') }}" value="{{ name }}">
                    <span class="help-inline">{{ interface('publicly') }}</span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-email">{{ interface('email') }}</label>
                <div class="col-sm-8">
                    <input class="form-control" name="email" type="email" id="input-email" placeholder="{{ interface('email') }}" required value="{{ email }}">
                    <span class="help-inline">{{ interface('confidentional') }}</span>
                </div>
            </div>

            {% if isUsernameRequired %}
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-username">{{ interface('username') }}</label>
                    <div class="col-sm-8">
                        <input class="form-control" name="username" type="text" id="input-username" placeholder="{{ interface('username') }}" required value="{{ username }}">
                    </div>
                </div>
            {% endif %}

            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-password">{{ interface('password') }}</label>
                <div class="col-sm-8">
                    <input class="form-control" name="password" type="password" id="input-password" required placeholder="{{ interface('password') }}">
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-confirm-password">{{ interface('repassword') }}</label>
                <div class="col-sm-8">
                    <input class="form-control" name="confirm_password" type="password" id="input-confirm-password" required placeholder="{{ interface('repassword') }}">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-8 col-sm-offset-2">
                    <button type="submit" class="btn btn-primary">{{ interface('register') }}</button>
                </div>
            </div>
        </form>

    {% endif %}
{% endblock %}
